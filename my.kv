<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text:  "Hello World"
            color: (1,0,0,1)
            font_size: 32
        TextInput:
            multiline: False
            size_hint: (1, .5)
        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Button 1"
        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Button 2"
            bold: True
        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Button 3"
            background_color: (0, 1, 0, 1)
        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Button 4"
            outline_color: (0, 120/255, 0, 1)
            outline_width: 3

